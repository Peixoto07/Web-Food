<section>
    <div class="w-full mx-auto flex flex-col justify-center pt-20 relative p-4">
      <!-- Starts component -->
      <div class="flex flex-col w-full" x-data="{
          skip: 1,
          autoPlayInterval: null,
          init() {
              this.autoPlayInterval = setInterval(() => {
                  this.next();
              }, 5000);
          },
          destroy() {
              clearInterval(this.autoPlayInterval);
          },
          next() {
              this.to((current, offset) => current + (offset * this.skip))
          },
          to(strategy) {
              let slider = this.$refs.slider;
              let current = slider.scrollLeft;
              let offset = slider.firstElementChild.getBoundingClientRect().width;
              let maxScrollLeft = slider.scrollWidth - slider.clientWidth;
              
              if (current + offset >= maxScrollLeft) {
                  slider.scrollTo({ left: 0, behavior: 'smooth' });
              } else {
                  slider.scrollTo({ left: strategy(current, offset), behavior: 'smooth' });
              }
          }
      }" x-init="init" x-on:destroy="destroy">
        <div class="flex items-center w-full" aria-labelledby="carousel-label" role="region" tabindex="0">
  
          <ul class="flex gap-8 no-scrollbar overflow-x-scroll mt-4 scrollbar-hide snap-mandatory snap-x w-full rounded-2xl" role="listbox" aria-labelledby="carousel-content-label" tabindex="0" x-ref="slider">
            <li class="items-center justify-center flex flex-col shrink-0 snap-start h-full w-fit rounded-2xl bg-gray-100">
              <img class="lg:max-w-sm rounded-xl" src="https://static.ifood-static.com.br/image/upload/t_high/discoveries/2201PromotionsCampanhasAtualizacaoCapastoprestaurantescomdescontoCapaPrincipal_lc9f.png?imwidth=828" alt="">
            </li>
  
            <li class="items-center justify-center flex flex-col shrink-0 snap-start h-full w-fit rounded-2xl bg-gray-100">
              <img class="lg:max-w-sm rounded-xl" src="https://static.ifood-static.com.br/image/upload/t_high/discoveries/2706BORADEACONCHEGOSCAPAPRINCIPAL_TiTj.png?imwidth=828" alt="">
            </li>
  
            <li class="items-center justify-center flex flex-col shrink-0 snap-start h-full w-fit rounded-2xl bg-gray-100">
              <img class="lg:max-w-sm rounded-xl" src="https://static.ifood-static.com.br/image/upload/t_high/discoveries/2111queridinhosprincipalamarelo_ffl9.png?imwidth=828" alt="">
            </li>
          </ul>
        </div>
      </div> <!-- Ends component -->
    </div>
  </section>
  